<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="hide_select_db" inherit_id="web.login" name="Hide Select DB">
        <xpath expr="//div[@class='form-group field-db']" position="replace">
        </xpath>
        <!-- reset Password/ Dont you ave an account?-->
        <xpath expr="//div[@class='justify-content-between mt-2 d-flex small']" position="replace">
        </xpath>
    </template>
    <template id="hide_manage_db" inherit_id="web.login_layout" name="Hide Manage DB">
        <xpath expr="//div[@class='text-center small mt-4 pt-3 border-top']" position="replace">
        </xpath>
    </template>

    <template id="portal_login" inherit_id="website.login_layout" name="Login Layout Inherit">
        <xpath expr="//div[@class='oe_website_login_container']" position="after">
            <style type="text/css">
                #wrapwrap{
                    background-color:#f1f4f5;
                }
               .oe_login_form {
                    max-width: 280px;
                    border-radius: 7px;
                    background-color: white;
                    padding:10px;
                    box-shadow: 0 0 11px 0px #714b67;
                    padding-bottom: 20px;
                }
                .form-group{
                margin-top:25px;}
	        </style>
        </xpath>
    </template>
</odoo>
